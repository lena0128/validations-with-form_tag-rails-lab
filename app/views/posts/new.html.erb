<h1>Create a new post</h1>

<%= form_tag posts_path, method: "post" do %>
<if @post.errors.any? %>
  <div id="error_explanation">
    <h2>There were some errors:</h2>
    <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>  
    </ul>
<%end%>

<div class="field<%= 'field_with_errors' if @post.errors[:title].empty? %>">
  <%= label_tag "title", "Title" %>
  <%= text_field_tag "title", @post.title %>
</div>
<br><br>
<div class="field<%= 'field_with_errors' if @post.errors[:category].empty? %>">
  <%= label_tag "category", "Category" %>
  <%= text_field_tag "category", @post.catgeory %>
</div><br><br>

<div class="field<%= 'field_with_errors' if @post.errors[:content].empty? %>">
  <%= label_tag "content", "Content" %>
  <%= text_field_tag "content", @post.content %>
</div><br><br>

    <%= submit_tag "Create Post">
<% end %>    